@page
@model VolleyPlayerList.Pages.PlayerList.IndexModel
@{
    ViewData["Title"] = "Index";
}
<h1 class="col-12 text-center text-black">Volleyball Team</h1>

<div class=" container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info text-white"> Player List</h2>
    </div>

    <div class="col-3">
        <a class="btn btn-primary form-control text-white">Add Player</a>
    </div>

    <div class="col-12 border p-3 m-3">
        <form method="post">
            @if (Model.VolleyPlayers.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr calss="table-secondary">
                        <th>
                            <label asp-for="VolleyPlayers.FirstOrDefault().Name"></label>
                            @*@Html.DisplayNameFor(m=>m.VolleyPlayers.FirstOrDefault().Name)*@
                        </th>
                        <th>
                            <label asp-for="VolleyPlayers.FirstOrDefault().LastName"></label>
                            @*@Html.DisplayNameFor(m=>m.VolleyPlayers.FirstOrDefault().LastName)*@
                        </th>
                        <th>
                            <label asp-for="VolleyPlayers.FirstOrDefault().Rate"></label>
                            @*@Html.DisplayNameFor(m=>m.VolleyPlayers.FirstOrDefault().Rate)*@
                        </th>
                    </tr>
                    @foreach(var item in Model.VolleyPlayers)  @*per element ne tabel listoje duke nxjerre dhe lexuar cdo vlere*@ 
                     {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Rate)
                            </td>
                            <td>
                                <button class="btn btn-success btn-sm text-white ">Edit</button>
                                <button class="btn btn-danger btn-sm ">Delete</button>
                            </td>
                        </tr>
                     }
                </table>

            }
            else
            {
                <p class="text-center" style="font-size:20px; font-style:italic">No Player on the List</p>
                <p class="text-center" style="font-size:20px" >:(</p>
            }
        </form>
    </div>
</div>